<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="rootPane" prefHeight="493.0" prefWidth="549.0" stylesheets="/resources/dark-theme.css"
           xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.addbook.BookAddController">
    <children>
        <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="338.0" prefWidth="464.0" styleClass="custom-pane">
            <children>
                <VBox prefHeight="533.0" prefWidth="558.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="-9.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <JFXTextField fx:id="title" labelFloat="true" promptText="Book Title">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="id" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Book ID">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="author" labelFloat="true" layoutX="20.0" layoutY="30.0"
                                      promptText="Book Author">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="publisher" labelFloat="true" layoutX="10.0" layoutY="62.0"
                                      promptText="Publisher">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <HBox>
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                            <children>
                                <JFXTextField fx:id="quantity" labelFloat="true" prefHeight="31.0" prefWidth="309.0"
                                              promptText=" Quantity (Default 1)">
                                    <HBox.margin>
                                        <Insets right="10.0"/>
                                    </HBox.margin>
                        </JFXTextField>
                                <JFXComboBox fx:id="year" prefHeight="31.0" prefWidth="157.0" promptText="year">
                                    <HBox.margin>
                                        <Insets left="20.0"/>
                                    </HBox.margin>
                                </JFXComboBox>
                            </children>
                        </HBox>
                        <JFXTextField fx:id="department" labelFloat="true" promptText="Department">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="subject" labelFloat="true" promptText="Subject">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                            <children>
                                <JFXButton fx:id="saveButton" onAction="#addBook" prefHeight="66.0" prefWidth="100.0"
                                           text="Save"/>
                                <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel"
                                           prefHeight="66.0" prefWidth="100.0" text="Cancel"/>
                            </children>
                            <VBox.margin>
                                <Insets top="25.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
